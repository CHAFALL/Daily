{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "outDir": "dist",
    // strict는 상위 옵션이라 true면 아래 strict~~~도 따라서 true (false도 마찬가지)
    "strict": true,
    // 엄격한 null 검사
    // "strictNullChecks": false,
    "moduleDetection": "force",
    "skipLibCheck": true
  },
  "ts-node": {
    "esm": true
  },

  "include": ["src"]
}
